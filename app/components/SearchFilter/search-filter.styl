.search-filter
    background-color: #eff4ff
    padding 20px
    width 100%

    &__fieldset
        margin-bottom: 30px
    &__fieldset-label
        margin-bottom: 12px
    &__checkbox
        display: inline-block;
        margin-right: 20px
        &:last-child
            margin-right: 0

    &__reset
        cursor: pointer
        color $base-fc
        display: inline-block;
        transition: all 0.3s ease
        &:hover
            color $color-link-hover
    &__reset-text
        border-bottom: 1px dotted
    &__slider-inputs
        display: flex
