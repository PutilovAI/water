.header
    background: #fff
    box-shadow: 0 2px 5px rgba(#000, 0.2)
    &__container
        margin 0 auto
        max-width: 100%
        width 100%
        padding-right 20px
        display flex
        justify-content: space-between;
        align-items: center;
    &__col
        display flex
        align-items: center;
    &__item-link
        height 60px
        line-height: 58px
        text-align: center;
        padding 0 15px
        color $base-fc
        font-size: 16px
        display: block
        &:hover
            color $base-fc
            background-color: lighten($color-main, 70%)

        &.active
            position: relative;
            &:after
                content ''
                height 12px
                width 100%
                position: absolute;
                bottom 0
                left 0
                background url(img/header-item-pattern.svg) repeat-x
                background-size auto 100%
                background-position bottom center
    &__link-user-bar
        color $base-fc
        font-size: 16px
        &_login
            position: relative;
            padding-left: 35px
            &:before
                icon(icon_user)
                width 30px
                text-align: center
                left 0
                position: absolute;
                font-size: 18px
                opacity: 0.6


    &__item
        &_logo
            margin-right: 15px
        &_user-bar
            margin-right 20px
            &:last-child
                margin-right: 0
