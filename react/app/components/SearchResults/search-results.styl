.search-results
    color #000
    &__list-item
        border-bottom: 1px solid $color-border
        &:first-child
            border-top: 1px solid $color-border
    &__list-item-title
        font-size: 20px
        margin-bottom: 10px
    &__list-item-type
        font-size: 12px
        opacity: 0.5
    &__list-item-link
        color inherit
        &:hover
            color inherit
