.source-props
    padding 20px
    width 100%
    background-color: $color-main-light-bg
    &__item
        display flex
        justify-content: space-between
        align-items: baseline;
        margin-bottom: 17px
        &_rating
            font-size: $fsH3
            margin-bottom: 25px
    &__rating
        font-size: 24px
        &_low
            color $color-red
        &_mid
            color $color-orange
        &_high
            color $color-green
