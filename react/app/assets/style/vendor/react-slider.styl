.slider
    height 14px
    margin-bottom: 10px
    & .bar
        height 4px
        border-radius: 2px
        top 5px
        &-0
            background-color: #EBEBEB
        &-1
            background-color: #CFCFCF
        &-2
            background-color: #EBEBEB

    & .handle
        background-color: $color-main
        width 14px
        height @width
        border-radius: 50%
        box-shadow: 0 1px 2px 0 rgba(0,0,0,0.20);
        top 0px
